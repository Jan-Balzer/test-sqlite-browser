{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "Bundler",

    /* others */
    "useDefineForClassFields": true,
    "lib": ["ESNext", "DOM"],
    "resolveJsonModule": true,
    "baseUrl": ".",
  },
  "include": ["src", "vite.config.ts"]
}
